var HCoder={}
HCoder.ka = ['&|&amp;','"|&quot;','<|&lt;','>|&gt;','\'|&#39;',' |&nbsp;','\r\n|<br>','\n|<br />','\t|&nbsp;&nbsp;&nbsp;&nbsp;']
HCoder.de = function(s){
	var r,a;
	s=String(s)
	for (var i=this.ka.length-1; i>=0; i--) {
		a = this.ka[i].split('|')
	    r = new RegExp(a[1],'g')
		s = s.replace(r, a[0]);
	}
	return s;
}
HCoder.en = function(s){
	var r,a;
	s=String(s)
	for (var i=0; i<this.ka.length; i++) {
		a = this.ka[i].split('|')
	    r = new RegExp(a[0],'g')
		s = s.replace(r, a[1]);
	}
	return s;
}
