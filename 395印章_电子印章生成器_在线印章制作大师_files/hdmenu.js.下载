	}*/

	$('#nav a:contains("书法字体")').before('<a id="job-menu-head" href="http://www.aa6666.com" target="_blank">招聘</a>')
	$('#nav').before(
		 '<div id="job-menu-list" class="xpmenu-list">'
		+'	<ul>'
		+'		<li><a href="http://job.ssjjss.com" target="_blank" title="中国设计师人才网">设计师人才网</a></li>'
