			$('#nav').parent().find('.xpmenu-list').hide()
			$('#hao-menu-list').show()
			.css({ 'top': $(this).offset().top+$(this).height()-$(window).scrollTop(), 'left': $(this).offset().left })
	})

	$('#hao-menu-list').mouseleave(function(){
			$(this).hide()
	})
	.css('width',140)

	$('body').click(function(){
		$('#nav').parent().find('.xpmenu-list').hide()
	})
})
